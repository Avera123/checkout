{
  "pages": {
    "checkout": {
      "path": "/legacy-extensions/checkout",
      "disableExternals": ["tachyons", "rc.js"]
    },
    "orderplaced": {
      "path": "/legacy-extensions/orderplaced",
      "disableExternals": ["tachyons", "rc.js"]
    },

    "checkout-render": {
      "path": "/checkout-render"
    }
  },
  "extensions": {
    "checkout": {
      "component": "CheckoutContainer"
    },
    "checkout/buttons": {
      "component": "vtex.render-runtime/ExtensionContainer"
    },
    "checkout/payments": {
      "component": "vtex.render-runtime/ExtensionContainer"
    },
    "orderplaced/pixels": {
      "component": "vtex.render-runtime/ExtensionContainer"
    },

    "checkout-render": {
      "component": "index"
    },
    "checkout-render/buttons": {
      "component": "vtex.render-runtime/ExtensionContainer",
      "ssr": false
    },
    "checkout-render/payments": {
      "component": "vtex.render-runtime/ExtensionContainer",
      "ssr": false
    }
  }
}
