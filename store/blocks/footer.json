{
  "footer-layout#checkout": {
    "children": ["flex-layout.col#footer"],
    "props": {
      "blockClass": "checkoutFooter"
    }
  },
  "footer-layout#checkout-mobile": {
    "children": ["flex-layout.col#footer-mobile"],
    "props": {
      "blockClass": "checkoutFooterMobile"
    }
  },

  "flex-layout.col#footer": {
    "children": ["divider#horizontal", "flex-layout.row#footer-text"],
    "props": {
      "blockClass": "footerContainer"
    }
  },
  "flex-layout.col#footer-mobile": {
    "children": ["flex-layout.row#footer-text"],
    "props": {
      "blockClass": "footerContainer"
    }
  },

  "flex-layout.row#footer-text": {
    "children": ["flex-layout.col#footer-notice", "powered-by#checkout"],
    "props": {
      "preventVerticalStretch": true,
      "preventHorizontalStretch": true,
      "blockClass": "footerText"
    }
  },
  "powered-by#checkout": {
    "props": {
      "blockClass": "checkout"
    }
  },
  "flex-layout.col#footer-notice": {
    "children": ["rich-text#store-copyright", "rich-text#store-disclaimer"],
    "props": {
      "preserveLayoutOnMobile": true,
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true
    }
  },
  "rich-text#store-copyright": {
    "props": {
      "text": "Store Theme &copy; 2020",
      "textColor": "c-muted-1",
      "font": "t-body",
      "blockClass": "checkoutCopyright"
    }
  },
  "rich-text#store-disclaimer": {
    "props": {
      "text": "None of the items above are for sale.",
      "textColor": "c-muted-2",
      "font": "t-body",
      "blockClass": "checkoutDisclaimer"
    }
  }
}
