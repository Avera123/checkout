{
  "checkout-product-list": {
    "blocks": ["product-list#checkout"]
  },
  "product-list#checkout": {
    "blocks": ["product-list-content-mobile#checkout"]
  },
  "product-list-content-mobile#checkout": {
    "children": ["flex-layout.row#list-row.mobile"]
  },
  "flex-layout.row#list-row.mobile": {
    "children": [
      "flex-layout.col#image.mobile",
      "flex-layout.col#main-container.mobile"
    ],
    "props": {
      "fullWidth": true,
      "paddingBottom": 6,
      "paddingTop": 5,
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.col#image.mobile": {
    "children": ["product-list-image"],
    "props": {
      "marginRight": 5
    }
  },
  "flex-layout.col#main-container.mobile": {
    "children": ["flex-layout.row#top.mobile", "flex-layout.row#price.mobile"],
    "props": {
      "width": "grow"
    }
  },
  "flex-layout.row#top.mobile": {
    "children": ["flex-layout.col#product-description"],
    "props": {
      "colSizing": "auto",
      "preserveLayoutOnMobile": "true"
    }
  },
  "flex-layout.row#price.mobile": {
    "children": ["product-quantity", "price#mobile"],
    "props": {
      "marginTop": 7,
      "preventHorizontalStretch": true,
      "blockClass": "checkoutItemPriceWrapper"
    }
  },
  "price#mobile": {
    "props": {
      "textAlign": "right",
      "showListPrice": false,
      "blockClass": "checkoutItemPrice"
    }
  }
}
